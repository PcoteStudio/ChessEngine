extends layout

block layout-content
  div.View
    h1.Banner
      div.Title
        h3 Chessboard
    
    table.chess-board 
      tbody 
        tr 
          each header in [' ', 'A', 'B', 'C', 'D', 'E', 'F', 'G', 'H']
            th=header
        each header in ['8', '7', '6', '5', '4', '3', '2', '1']
          - var i = header % 2
          tr 
            th=header 
            - var n = 8
            while n > 0
              - n--;
              if n % 2 != i
                td.light
              else 
                td.dark
              